@model _5051.Models.ShopInventoryViewModel

@{
    ViewBag.Title = "Edit ShopInventory";
}


<div class="container">
    <br />
    <h2>Click on an ShopInventory to Edit</h2>
    <br />
    <br />

    <div class="row text-center">

        @{
            if (Model.ShopInventoryList == null || !Model.ShopInventoryList.Any())
            {
                <br />
                <p>No ShopInventorys in the System</p>
                <br />
            }
            else
            {
                foreach (var item in Model.ShopInventoryList)
                {
                    <div class="col-sm-2">
                        <div class="ShopInventoryBox">
                            <a id="@item.Id" href="~/ShopInventory/Read/@item.Id">
                                <img src="~/Content/img/@item.Uri" class="ShopInventorySize1" />
                            </a>
                            <br />
                            <span>
                                @item.Name
                                <br />
                                <br />
                                <br />
                            </span>
                        </div>
                    </div>
                }
            }
        }

    </div>
    <br />
    <br />
    <div class="row text-center">
        <div class="col-sm-2">
            @Html.ActionLink("Create New ShopInventory", "Create", null, new { @class = "btn btn-success" })
        </div>
    </div>
</div>

