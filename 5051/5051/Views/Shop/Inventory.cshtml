@model _5051.Models.SelectedFactoryInventoryForStudentViewModel
@{
    ViewBag.Title = "Inventory";

    if (Model == null || Model.Student == null || Model.FactoryInventoryCategoryList == null || !Model.FactoryInventoryCategoryList.Any())
    {
        <br />
        <h2>There is nothing in your Inventory</h2>
        <h3>Go to factory to buy something</h3>
    }

    else
    {
        <br />
        <h2 class="text-left">Select your item</h2>
        <br />

        <hr />

        var disabledOn = "";
        var BoxHover = "BoxWithHighlightHover";
        var ActiveTab = "";
        var TabCount = 0;
        var DisplayText = "";


        <ul class="nav nav-tabs">
            @{
                TabCount = 0;
                foreach (var CurrentList in Model.FactoryInventoryCategoryList)
                {
                    ActiveTab = "";

                    if (CurrentList == null)
                    {
                        continue;
                    }

                    TabCount++;
                    if (TabCount == 1)
                    {
                        ActiveTab = "active";
                    }

                    <li class="nav-item"><a class="nav-link @ActiveTab" data-toggle="tab" href="#@CurrentList.Category">@CurrentList.Category</a></li>
                }
            }
        </ul>


        <div class="tab-content">

                @{
                    TabCount = 0;
                    foreach (var CurrentList in Model.FactoryInventoryCategoryList)
                    {
                        ActiveTab = "";
                        if (CurrentList == null)
                        {
                            continue;
                        }

                        TabCount++;
                        if (TabCount == 1)
                        {
                            ActiveTab = "active";
                        }

                        <div id="@CurrentList.Category" class="tab-pane container @ActiveTab">
                            <br />
                            <h3>@CurrentList.Category</h3>
                            <div class="row">
                                @{
                                     //If no items, then skip
                                    if (!CurrentList.FactoryInventoryList.Any())
                                    {
                                        <br />
                                        <div>No Items</div>
                                        continue;
                                    }

                                    //AvatarViewModel outputAvatar = new AvatarViewModel();
                                    foreach (var item in CurrentList.FactoryInventoryList)
                                    {
                                        using (Html.BeginForm())
                                        {
                                            @Html.Hidden("StudentId", Model.Student.Id);
                                            @Html.Hidden("ItemId", item.Id);

                                            var picturURI = "/Content/shop/" + item.Uri;

                                            disabledOn = "";
                                            BoxHover = "BoxWithHighlightHover";
                                            DisplayText = "";

                                            //// Check if the user owns the item, if so disable it.
                                            //var ItemAlreadyExists = Model.Student.Inventory.Exists(m => m.Id == item.Id);
                                            //if (ItemAlreadyExists)
                                            //{
                                            //    // Already own it.
                                            //    disabledOn = "disabled";
                                            //    BoxHover = "BoxWithHighlightHoverOff";    //don't show the hover effect
                                            //    DisplayText = "Purchaged";

                                            //}

                                            <div class="col-sm-2">
                                                <div class="@BoxHover">
                                                    <input type="image" name="submit" src="@picturURI" border="0" alt="@item.Name" class="AvatarSize1" @disabledOn />
                                                    <br />
                                                    <span class="text-center">
                                                        @item.Name
                                                        <br />
                                                        @DisplayText
                                                    </span>
                                                </div>
                                            </div>
                                        }
                                    }
                                }
                            </div>
                        </div>

                    }
            }
        </div>

    }
}


