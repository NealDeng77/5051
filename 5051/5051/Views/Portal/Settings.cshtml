@model _5051.Models.StudentDisplayViewModel

@{
    ViewBag.Title = "My Settings";
}
<br />
<h2>You Can Update Your Settings</h2>



<div class="container">


        @{
            if (Model == null)
            {
                <p>No Student</p>
            }

            else
            {
                <div class="container">
                    <div class="row">
                        <div class="col-sm-3 text-right">
                        </div>
                        <div class="col-sm-2">
                            <img src="~/Content/img/@Model.AvatarUri" class="AvatarSize1" />
                            <br />
                            <span>
                                @Model.Name
                                <br />
                                <br />
                                <br />
                            </span>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-3 text-right">
                            @Html.DisplayNameFor(m => m.AvatarLevel)
                        </div>
                        <div class="col-sm-2">
                            @Html.DisplayFor(m => m.AvatarLevel)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-3 text-right">
                            @Html.DisplayNameFor(m => m.Tokens)
                        </div>
                        <div class="col-sm-2">
                            @Html.DisplayFor(m => m.Tokens)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-3 text-right">
                            @Html.DisplayNameFor(m => m.ExperiencePoints)
                        </div>
                        <div class="col-sm-2">
                            @Html.DisplayFor(m => m.ExperiencePoints)
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-sm-3 text-right">
                            @Html.DisplayNameFor(m => m.Status)
                        </div>
                        <div class="col-sm-2">
                            @Html.DisplayFor(x => x.Status)
                        </div>
                    </div>

                    <br />
                    <hr />
                    <br />

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.AvatarId)
                        @Html.HiddenFor(m => m.AvatarLevel)
                        @Html.HiddenFor(m => m.Tokens)
                        @Html.HiddenFor(m => m.Status)
                        @Html.HiddenFor(m => m.AvatarUri)
                        @Html.HiddenFor(m => m.ExperiencePoints)
                        @Html.HiddenFor(m => m.Password)

                        <div class="row">
                            <div class="col-sm-3 text-right">
                                @Html.DisplayNameFor(m => m.Name)
                            </div>
                            <div class="col-sm-2">
                                @Html.EditorFor(m => m.Name)
                                @Html.ValidationMessageFor(m => m.Name)
                            </div>
                        </div>

                        <br />
                        <br />
                        <div class="row">
                            <div class="col-sm-3 text-right">
                            </div>
                            <div class="col-sm-4">
                                <input type="submit" value="Update" class="btn btn-primary">
                            </div>
                        </div>

                    }
                </div>
            }
        }

</div>



