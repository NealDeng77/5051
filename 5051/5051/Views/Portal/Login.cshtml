@model _5051.Models.StudentDisplayViewModel
@{
    ViewBag.Title = "Login";
}

<br />
<br />
<br />
<br />
<br />
<br />

<div class="row">
    <div class="col-sm-3"></div>
    <div class="col-sm-6">
        <div class="BlockStudentLogin">
            <br />
            <div class="row">
                <p class="FontStyleBlockH1">Student Login</p>
            </div>
            <div class="row">
                <div class="col-sm-4">
                </div>
                <div class="col-sm-4 text-center">
                    <br />
                    <img src="~/Content/img/@Model.AvatarUri" class="AvatarSize1" />
                    <br />
                    <span class="text-center FontColor1">
                        @Model.Name
                        <br />
                        <br />
                    </span>
                </div>
            </div>


            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)
                @Html.HiddenFor(m => m.Name)
                @Html.HiddenFor(m => m.AvatarId)
                @Html.HiddenFor(m => m.Tokens)
                @Html.HiddenFor(m => m.Status)
                @Html.HiddenFor(m => m.AvatarLevel)
                @Html.HiddenFor(m => m.AvatarUri)
                @Html.HiddenFor(m => m.AvatarDescription)

                <div class="row">
                    <div class="col-sm-2 text-right">
                        <i class="fa fa-lock LockStyle" aria-hidden="true"></i>
                    </div>
                    <div class="col-sm-8">
                        @Html.PasswordFor(m => m.Password, new { @class = "input1" })
                    </div>
                </div>

                <br />

                <div class="row">
                    <div class="col-sm-2 text-right">
                    </div>
                    <div class="col-sm-4">
                        @Html.ActionLink("Cancel", "Roster", null, new { @class = "btn btn1 btn-light btn-block", id = "cancelLoginButton" })
                    </div>
                    <div class="col-sm-4">
                        <input type="submit" value="Login" id = "loginButton" class="btn btn1 btn-light btn-block">
                    </div>
                </div>
            }
        </div>
    </div>
</div>

