@model _5051.Models.StudentViewModel
@{
    ViewBag.Title = "Roster";
}
<br />
<div class="text-center bg-transparent pt-5" id="top-jumbotron">
    <h1>Click on your Avatar to Login</h1>
</div>

<br />
<br />

<div class="row text-center">

    @{
        foreach (var item in Model.StudentList)
        {
            <div class="col-sm-2">
                <div class="BoxWithHighlightHover text-center darkTransparentBox">
                    <a id="@item.Id" href="~/Portal/Login/@item.Id">
                        <img src="~/Content/img/@item.AvatarUri" class="AvatarSize1" />
                    </a>
                    <br />
                    <span class="text-center">
                        @item.Name
                    </span>
                </div>
            </div>
        }
    }
</div>
