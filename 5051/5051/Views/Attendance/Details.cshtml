@model _5051.Models.AttendanceModel

@{
    ViewBag.Title = "Attendance Details";
}

<br />
<div class="row justify-content-center">

    <div class="col-1 "></div>
    <div class="col lightTransparentBox">
        <br />
        <div class="FontSizeLarge text-center">
            <span class="FontSizeLarger FontBold">
                Attendance Details
            </span>
        </div>
        <br />
    </div>
    <div class="col-1"></div>
</div>

<div class="row">
    <br />
    <br />
</div>


@{
    if (Model == null)
    {
        <div class="row justify-content-center">

            <div class="col-1 "></div>
            <div class="col lightTransparentBox">
                <br />
                <div class="FontSizeLarge text-center">
                    No Attendance
                </div>
                <br />
            </div>
            <div class="col-1"></div>
        </div>
    }

    else
    {
        <div class="row justify-content-center">

            <div class="col-1 "></div>
            <div class="col lightTransparentBox FontSizeMedium text-center">
                <br />
                <br />

                <div class="row">
                    <div class="col-6 text-right" id="avatarLevelName">
                        @Html.DisplayNameFor(m => m.In)
                    </div>
                    <div class="col-1">
                        &nbsp;:&nbsp;
                    </div>
                    <div class="col text-left" id="avatarLevelValue">
                        @Html.DisplayFor(m => m.In)
                    </div>
                </div>
                <br />
                <div class="row">
                    <div class="col-6 text-right" id="tokensName">
                        @Html.DisplayNameFor(m => m.Out)
                    </div>
                    <div class="col-1">
                        &nbsp;:&nbsp;
                    </div>
                    <div class="col text-left" id="tokensValue">
                        @Html.DisplayFor(m => m.Out)
                    </div>
                </div>


                <br />

                <hr />
            
            <br />

            <div class="row justify-content-around">
                <div class="col justify-content-center text-center">
                    @Html.ActionLink("Cancel", "Read", new { id = Model.StudentId }, new { @class = "btn btn1 btn-light" })
                </div>
                <div class="col justify-content-center text-center">
                    @Html.ActionLink("Update", "Update", new { id = Model.Id }, new { @class = "btn btn1 btn-light" })
                </div>
                <div class="col justify-content-center text-center">
                    @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn1 btn-light" })
                </div>
            </div>

            <br />

        </div>
            <div class="col-1"></div>
        </div>
    }
}