@model _5051.Models.AvatarModel

@{
    ViewBag.Title = "Update";
}


<div class="container">
    <div class="row">

        @{
            if (Model == null)
            {
                <p>No Avatar</p>
            }

            else
            {
                <div class="row">
                    <h2>Update Avatar</h2>
                    <br />
                    <br />

                    <div class="row">
                        <div class="col-sm-2 text-right">
                        </div>
                        <div class="col-sm-2">
                            <img src="~/Content/img/@Model.Uri" width="75" height="75" />
                            <span>
                                @Model.Name
                                <br />
                                <br />
                                <br />
                            </span>
                        </div>
                    </div>

                        <div class="row">
                            <div class="col-sm-2 text-right">
                                @Html.DisplayNameFor(m => m.Name)
                            </div>
                            <div class="col-sm-2">
                                @Html.DisplayFor(m => m.Name)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-2 text-right">
                                @Html.DisplayNameFor(m => m.Description)
                            </div>
                            <div class="col-sm-2">
                                @Html.DisplayFor(m => m.Description)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-2 text-right">
                                @Html.DisplayNameFor(m => m.Uri)
                            </div>
                            <div class="col-sm-2">
                                @Html.DisplayFor(m => m.Uri)
                            </div>
                        </div>

                        <br />
                        <br />
                        <div class="row">
                            <div class="col-sm-2 text-right">
                            </div>
                            <div class="col-sm-4 btn-group">
                                @Html.ActionLink("Cancel", "Index", new { id = Model.Id }, new { @class = "btn btn-success" })
                                @Html.ActionLink("Update", "Update", new { id = Model.Id }, new { @class = "btn btn-primary" })
                                @Html.ActionLink("Delete", "Delete", new { id = Model.Id }, new { @class = "btn btn-danger" })
                            </div>
                        </div>



                </div>
            }

        }
    </div>
</div>
