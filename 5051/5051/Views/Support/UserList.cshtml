@using _5051.Backend

@{
    ViewBag.Title = "UserList";
}
<br />
<h2>UserList</h2>

@{
    var idbackend = new IdentityBackend();

    var studentList = idbackend.ListAllStudentUsers();
    var teacherList = idbackend.ListAllTeacherUsers();
    var supportList = idbackend.ListAllSupportUsers();
    var userList = idbackend.ListAllUsers();

    <h4>Students</h4>
    <ul>
        @{
            foreach (var item in studentList)
            {
                <li class="col text-left">
                    @Html.ActionLink(item.UserName, "UserInfo", "Support", routeValues: new { id = item.Id }, htmlAttributes: new { id = item.Id })
                </li>
            }
        }
    </ul>

    <h4>Teachers</h4>
    <ul>
        @{
            foreach (var item in teacherList)
            {
                <li class="col text-left">
                    @Html.ActionLink(item.UserName, "UserInfo", "Support", routeValues: new { id = item.Id }, htmlAttributes: new { id = item.Id })
                </li>
            }
        }
    </ul>

    <h4>Support Users</h4>
    <ul>
        @{
            foreach (var item in supportList)
            {
                <li class="col text-left">
                    @Html.ActionLink(item.UserName, "UserInfo", "Support", routeValues: new { id = item.Id }, htmlAttributes: new { id = item.Id })
                </li>
            }
        }
    </ul>

    <h4>All Users</h4>
    <ul>
        @{
            foreach (var item in userList)
            {
                <li class="col text-left">
                    @Html.ActionLink(item.UserName, "UserInfo", "Support", routeValues: new { id = item.Id }, htmlAttributes: new { id = item.Id })
                </li>
            }
        }
    </ul>
}