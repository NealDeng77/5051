@model _5051.Models.KioskSettingsModel
@{
    ViewBag.Title = "Read";

}

<br />
<div class="row justify-content-center">

    <div class="col-1 "></div>
    <div class="col lightTransparentBox">
        <br />
        <div class="FontSizeLarge text-center">
            <span class="FontSizeLarger FontBold FontColorBlack">
                Kiosk Settings
            </span>
        </div>
        <br />
    </div>
    <div class="col-1"></div>
</div>

<div class="row">
    <br />
    <br />
</div>


@{
    if (Model == null)
    {
        <div class="row justify-content-center">

            <div class="col-1 "></div>
            <div class="col lightTransparentBox">
                <br />
                <div class="FontSizeLarge text-center FontColorBlack">
                    No Data
                </div>
                <br />
            </div>
            <div class="col-1"></div>
        </div>
    }

    else
    {
        <div class="row justify-content-center FontColorBlack">

            <div class="col-1 "></div>
            <div class="col lightTransparentBox">
                <br />
                <div class="FontSizeMedium text-center">
                    <br />
                    <br />

                    <div class="row justify-content-around">
                        <div class="col text-right" id="avatarLevelName">
                            @Html.DisplayNameFor(m => m.Password)
                        </div>
                        <div class="col-1">
                            &nbsp;:&nbsp;
                        </div>
                        <div class="col text-left" id="avatarLevelValue">
                            @Html.DisplayFor(m => m.Password)
                        </div>
                    </div>

                    <div class="row justify-content-around">
                        <div class="col text-right" id="tokensName">
                            @Html.DisplayNameFor(m => m.TimeZone)
                        </div>
                        <div class="col-1">
                            &nbsp;:&nbsp;
                        </div>
                        <div class="col text-left" id="tokensValue">
                            @Html.DisplayFor(m => m.TimeZone.DisplayName)
                        </div>
                    </div>

                    <br />
                    <hr />
                </div>
                <br />

                <div class="row justify-content-around DispalyBoxWithMargin">
                    <div class="col text-center DispalyBoxWithMargin">
                        @Html.ActionLink("Back", "Settings", new { id = Model.Id, Controller = "Admin" }, new { @class = "btn btn1 btn-light DispalyBoxWithMargin" })
                    </div>
                    <div class="col text-center DispalyBoxWithMargin">
                        @Html.ActionLink("Update", "Update", new { id = Model.Id }, new { @class = "btn btn1 btn-light DispalyBoxWithMargin" })
                    </div>
                </div>

                <br />

            </div>
            <div class="col-1"></div>
        </div>
    }
}
