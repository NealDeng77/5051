@model _5051.Models.FactoryInventoryModel
@{
    ViewBag.Title = "Delete";
}

<div class="container FontColorWhite">

        @{
            if (Model == null)
            {
                <br />
                <p>No FactoryInventory</p>
            }

            else
            {
                <div class="">
                    <br />
                    <h2>Delete FactoryInventory</h2>
                    <br />
                    <br />

                    <div class="row">
                        <div class="col-sm-3 text-right">
                        </div>
                        <div class="col-sm-4">
                            <img src="~/Content/shop/@Model.Uri" class="FactoryInventorySize1" />
                            <br />
                            <span>
                                @Model.Name
                                <br />
                                <br />
                                <br />
                            </span>
                        </div>
                    </div>

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)
                        @Html.HiddenFor(m => m.Name)
                        @Html.HiddenFor(m => m.Description)
                        @Html.HiddenFor(m => m.Uri)
                        @Html.HiddenFor(m => m.Tokens)
                        @Html.HiddenFor(m => m.Category)

                        <div class="row">
                            <div class="col-sm-3 text-right">
                            </div>
                            <div class="col-sm-4">
                                @Html.ActionLink("Cancel", "Index", new { id = Model.Id }, new { @class = "btn btn-success" })
                                <input type="submit" value="Delete" class="btn btn-danger">
                            </div>
                        </div>
                    }

                </div>
            }

        }

</div>
