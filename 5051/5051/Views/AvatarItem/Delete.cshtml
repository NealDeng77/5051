@model _5051.Models.AvatarItemModel

@{
    ViewBag.Title = "Delete";
}


<div class="container">
    <br />

    @{
        if (Model == null)
        {
            <p>No Avatar</p>
        }

        else
        {
            <div class="container">
                <h2>Delete Avatar</h2>
                <br />
                <br />

                <div class="row">
                    <div class="col-sm-3 text-right">
                    </div>
                    <div class="col-sm-4">
                        <img src="~/Content/avatar/@Model.Uri" class="AvatarSize1" />
                        <br />
                        <span>
                            @Model.Name
                            <br />
                            <br />
                            <br />
                        </span>
                    </div>
                </div>

                @using (Html.BeginForm())
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(m => m.Id)
                    @Html.HiddenFor(m => m.Name)
                    @Html.HiddenFor(m => m.Description)
                    @Html.HiddenFor(m => m.Uri)

                    <div class="row">
                        <div class="col-sm-3 text-right">
                        </div>
                        <div class="col-sm-4">
                            @Html.ActionLink("Cancel", "Index", new { id = Model.Id }, new { @class = "btn btn-success" })
                            <input type="submit" value="Delete" class="btn btn-danger">
                        </div>
                    </div>
                }

            </div>
        }

    }
</div>
