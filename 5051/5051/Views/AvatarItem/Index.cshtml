@model _5051.Models.AvatarItemViewModel

@{
    ViewBag.Title = "Edit Avatar";
}


<div class="container">
    <br />
    <h2>Click on an Avatar to Edit</h2>
    <br />
    <br />

    <div class="row text-center">
        @{
            if (Model.AvatarItemList == null || !Model.AvatarItemList.Any())
            {
                <br />
                <p>No Avatars in the System</p>
                <br />
            }
            else
            {
                foreach (var item in Model.AvatarItemList)
                {
                    <div class="col-sm-2">
                        <div class="BoxWithHighlightHover">
                            <a id="@item.Id" href="~/Avatar/Read/@item.Id">
                                <img src="~/Content/img/@item.Uri" class="AvatarSize1" />
                            </a>
                            <br />
                            <span>
                                @item.Name
                                <br />
                                <br />
                                <br />
                            </span>
                        </div>
                    </div>
                }
            }
        }

    </div>
    <br />
    <br />
    <div class="row text-center">
        <div class="col-sm-2">
            @Html.ActionLink("Create New Avatar", "Create", null, new { @class = "btn btn-success" })
        </div>
    </div>
</div>

