@model _5051.Models.AvatarItemViewModel
@{
    ViewBag.Title = "Edit Avatar Items";
}

<br />
<div class="row justify-content-center">

    <div class="col-1 "></div>
    <div class="col lightTransparentBox">
        <br />
        <div class="FontSizeLarge text-center">
            <span class="FontSizeLarger FontBold">Click on the Avatar Item</span>
        </div>
        <br />
    </div>
    <div class="col-1"></div>
</div>

<div class="row">
    <br />
    <br />
</div>

<div class="container">

    <div class="row text-center">
        @{
            if (Model.AvatarItemList == null || !Model.AvatarItemList.Any())
            {
                <div class="row justify-content-center">

                    <div class="col-1 "></div>
                    <div class="col lightTransparentBox">
                        <br />
                        <div class="FontSizeLarge text-center">
                            No Avatar Items.  Click Create New Item to make one
                        </div>
                        <br />
                    </div>
                    <div class="col-1"></div>
                </div>
            }
            else
            {
                foreach (var item in Model.AvatarItemList)
                {
                    <div class="col-sm-2">
                        <div class="BoxWithHighlightHover">
                            <a id="@item.Id" href="~/AvatarItem/Read/@item.Id">
                                <img src="~/Content/avatar/@item.Uri" class="AvatarSize1" />
                            </a>
                            <br />
                            <span>
                                @item.Name
                                <br />
                                @item.Category
                                <br />
                                <br />
                            </span>
                        </div>
                    </div>
                }
            }
        }

    </div>

    <br />
    <hr />
    <br />

    <div class="row justify-content-around">
        <div class="col justify-content-center text-center">
            @Html.ActionLink("Create New Item", "Create", null, new { @class = "btn btn1 btn-light" })
        </div>
    </div>

</div>

