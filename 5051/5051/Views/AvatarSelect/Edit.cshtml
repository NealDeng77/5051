@using _5051.Models;
@using _5051.Models.Enums;
@model _5051.Models.AvatarSelectShopViewModel
@{
    ViewBag.Title = "Edit Avatar Components";
    var myPlace = Model.data.Item.Category;
}

<br />

<div class="row justify-content-center">

    <div class="col-1 "></div>
    <div class="col lightTransparentBox">
        <br />
        <div class="FontSizeMedium text-center">
            <span class="FontSizeMedium FontBold">
                Avatar Customization
            </span>
        </div>
        <br />
    </div>
    <div class="col-1"></div>
</div>

<div class="row justify-content-center">
    <div class="AvatarBoxLarge align-self-sm-center" id="AvatarBox">
        <div class="AvatarCircle"></div>
        <img class="AvatarItemBase AvatarHairBack" id="AvatarHairBack" src="@Model.Student.AvatarComposite.AvatarHairBackUri" />
        <img class="AvatarItemBase AvatarHead" id="AvatarHead" src="@Model.Student.AvatarComposite.AvatarHeadUri" />
        <img class="AvatarItemBase AvatarShirt" id="AvatarShirt" src="@Model.Student.AvatarComposite.AvatarShirtShortUri" />
        <img class="AvatarItemBase AvatarExpression" id="AvatarExpression" src="@Model.Student.AvatarComposite.AvatarExpressionUri" />
        <img class="AvatarItemBase AvatarCheeks" id="AvatarCheeks" src="@Model.Student.AvatarComposite.AvatarCheeksUri" />
        <img class="AvatarItemBase AvatarHairFront" id="AvatarHairFront" src="@Model.Student.AvatarComposite.AvatarHairFrontUri" />
        <img class="AvatarItemBase AvatarAccessory" id="AvatarAccessory" src="@Model.Student.AvatarComposite.AvatarAccessoryUri" />
    </div>
</div>


<div class="row justify-content-start">
    <div class="col-1"></div>

    <div class="col">

        <div class="row">
            <div class="col">
                <div class="row">
                    <h2>@Model.data.Item.Category</h2>
                </div>
                @{
                    myPlace = Model.data.Item.Category;

                    <div class="row">
                        <div class="col-sm-2">
                            <div class="">
                                <img src="~/Content/avatar/@Model.data.Item.Uri" class="FactoryInventorySize1" />
                                <br />
                                <span>
                                    @Model.data.Item.Name
                                </span>
                            </div>
                        </div>
                    </div>

                    <div class="row">
                        <span>Inventory</span>
                    </div>

                    <div class="row">
                        @{
                            if (Model.data.ItemList.Count < 1)
                            {
                                <div>No Items to Select</div><br /><br />
                            }

                            foreach (var InventoryItem in Model.data.ItemList)
                            {
                                using (Html.BeginForm())
                                {
                                    //Send up the AvatarId, and the StudentId to associated the Avatar with.
                                    @Html.Hidden("StudentId", Model.Student.Id);
                                    @Html.Hidden("ItemId", InventoryItem.Id);
                                    @Html.Hidden("Position", AvatarItemCategoryEnum.Head);


                                    var picturURI = "/Content/avatar/" + InventoryItem.Uri;

                                    <div class="col-sm-2 text-center">
                                        <div class="BoxWithHighlightHover">
                                            <input type="image" name="submit" src="@picturURI" border="0" alt="@InventoryItem.Name" id="@InventoryItem.Id" class="AvatarSize1" />
                                            <br />
                                            <span class="text-center">
                                                @InventoryItem.Name
                                                <br />
                                            </span>
                                        </div>
                                    </div>
                                }
                            }
                        }
                    </div>
                }
            </div>

        </div>
        <br />
        <br />
    </div>

    <div class="col-1"></div>
</div>
