@model _5051.Models.KioskSettingsModel
@{
    ViewBag.Title = "Login";
}
<br/>
<div class="row justify-content-center">
    <div class="col-1"></div>
    <div class="col lightTransparentBox">
        <br />
        <div class="FontSizeLarge text-center">
            <span class="FontSizeLarger FontBold">
                Enter the Kiosk Password
            </span>
        </div>
        <br />
    </div>
    <div class="col-1"></div>
</div>

<div class="row">
    <br />
    <br />
</div>

<div class="row justify-text-center">
    <div class="col-1"></div>
    <div class="col lightTransparentBox">
        <br />
        <br />
        <div class="text-center">
            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()
                @Html.HiddenFor(m => m.Id)

                <div class="row no-gutters justify-content-around">
                    <div class="col-1"></div>
                    <div class="col">
                        <div class="row">
                            <div class="col-1">
                                <i class="fa fa-lock LockStyle" aria-hidden="true"></i>
                            </div>
                            <div class="col-1"></div>
                            <div class="col">
                                @Html.PasswordFor(m => m.Password, new { @class = "input1" })
                                @Html.ValidationMessageFor(m => m.Password)
                            </div>
                        </div>
                    </div>
                    <div class="col-2"></div>
                </div>

                <br />
                <div class="row no-gutters justify-content-around">
                    <div class="col-1"></div>
                    <div class="col">
                        @Html.ActionLink("Cancel", "Index", new { Controller = "Home" }, new { @class = "btn btn1 btn-light" })
                    </div>
                    <div class="col">
                        <input id="LogInButton" type="submit" name="submit" value="Log In" class="btn btn1 btn-light" />
                    </div>
                    <div class="col-1"></div>
                </div>
            }
            <br />
        </div>
    </div>
    <div class="col-1"></div>
</div>
