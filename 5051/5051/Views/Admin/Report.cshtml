@model _5051.Models.AdminReportIndexViewModel
@{
    ViewBag.Title = "Reports";
}
<br />
<div class="row justify-content-center">

    <div class="col-1 "></div>
    <div class="col lightTransparentBox">
        <br />
        <div class="FontSizeLarge text-center FontColorWhite">
            <span class="FontSizeLarger FontBold">View student reports</span>
        </div>
        <br />
    </div>
    <div class="col-1"></div>
</div>

<div class="row">
    <br />
    <br />
</div>

<div class="row">
    <div class="col-1 "></div>
    <div class="col">
        <div class="row justify-content-around">
            @{
                if (Model.StudentList == null || !Model.StudentList.Any())
                {
                    <div class="col text-center FontSizeLarge FontColorWhite">
                        <br />
                        No Students in the System
                        <br />
                    </div>
                }
                else
                {

                    foreach (var item in Model.StudentList)
                    {
                        <div class="col-auto">
                            <div class="lightTransparentBox p-4 row justify-content-center align-items-center DispalyBoxWithMargin">
                                <div class="col text-center">
                                    <div class="row justify-content-center">
                                        <div class="AvatarBoxNormal align-self-sm-center" id="AvatarBox">
                                            <div class="AvatarCircle"></div>
                                            <img class="AvatarItemBase AvatarHairBack" id="AvatarHairBack" src="@item.AvatarComposite.AvatarHairBackUri" />
                                            <img class="AvatarItemBase AvatarHead" id="AvatarHead" src="@item.AvatarComposite.AvatarHeadUri" />
                                            <img class="AvatarItemBase AvatarShirt" id="AvatarShirt" src="@item.AvatarComposite.AvatarShirtShortUri" />
                                            <img class="AvatarItemBase AvatarExpression" id="AvatarExpression" src="@item.AvatarComposite.AvatarExpressionUri" />
                                            <img class="AvatarItemBase AvatarCheeks" id="AvatarCheeks" src="@item.AvatarComposite.AvatarCheeksUri" />
                                            <img class="AvatarItemBase AvatarHairFront" id="AvatarHairFront" src="@item.AvatarComposite.AvatarHairFrontUri" />
                                            <img class="AvatarItemBase AvatarAccessory" id="AvatarAccessory" src="@item.AvatarComposite.AvatarAccessoryUri" />
                                        </div>
                                    </div>

                                    <div class=" row justify-content-center FontSizeMedium FontColorWhite">
                                        @item.Name
                                    </div>
                                </div>

                                <div class="col text-white">
                                    <a href="~/Admin/WeeklyReport/@item.Id" class="btn darkTransparentBox BoxWithHighlightHover btn-block btn-sm">Weekly</a>
                                    <a href="~/Admin/MonthlyReport/@item.Id" class="btn darkTransparentBox BoxWithHighlightHover btn-block btn-sm">Monthly</a>
                                    <a href="~/Admin/SemesterReport/@item.Id" class="btn darkTransparentBox BoxWithHighlightHover btn-block btn-sm">Semesterly</a>
                                    <a href="~/Admin/QuarterReport/@item.Id" class="btn darkTransparentBox BoxWithHighlightHover btn-block btn-sm">Quarterly</a>
                                    <a href="~/Admin/OverallReport/@item.Id" class="btn darkTransparentBox BoxWithHighlightHover btn-block btn-sm">School Year</a>
                                </div>
                            </div>

                        </div>
                    }
                }
            }
        </div>
    </div>
    <div class="col-1 "></div>
</div>

<div class="row">
    <br />
    <br />
</div>

<div class="row justify-content-center">
    <div class="col-1"></div>
    <div class="col-auto text-center lightTransparentBox justify-content-center align-items-center DispalyBoxWithMargin">
        <table class="table table-borderless FontColorWhite FontSizeMedium">
            <thead class="FontBold">
                <tr>
                    <td>Rank</td>
                    <td>Name</td>
                    <td>Minutes</td>
                </tr>
            </thead>

            <tbody class="FontNormal">
                @for (int i = 0; i < Model.Leaderboard.Count; i++)
                {
                    <tr>
                        <td>@(i + 1)</td>
                        <td>@Model.Leaderboard[i].Name</td>
                        <td>@Model.Leaderboard[i].AttendedMinutesThisWeek</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="col-1"></div>
</div>

<div class="row">
    <br />
    <br />
</div>
