@model _5051.Models.SemesterReportViewModel
@{
    ViewBag.Title = "Semester Reports";
}

<div class="text-center text-light">
    <br />
    <h4>@Model.Student.Name's Semester Report</h4>
    <h5>@Model.DateStart.ToString("d") to @Model.DateEnd.ToString("d")</h5>
    <ul class="nav nav-pills">
        <li class="nav-item">
            @Html.ActionLink("Weekly", "WeeklyReport", "Admin", new { id = Model.StudentId }, new { @class = "nav-link text-light" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Monthly", "MonthlyReport", "Admin", new { id = Model.StudentId }, new { @class = "nav-link text-light" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("Semester", "SemesterReport", "Admin", new { id = Model.StudentId }, new { @class = "nav-link active text-light" })
        </li>
        <li class="nav-item">
            @Html.ActionLink("School Year", "OverallReport", "Admin", new { id = Model.StudentId }, new { @class = "nav-link text-light" })
        </li>
    </ul>
    <hr>
    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()
            @Html.HiddenFor(m => m.StudentId)
            <div class="row w-100">

                <div class="col-sm-3 text-right mr-auto">
                    @*Todo replace hardcoded years*@
                    @Html.DropDownListFor(m => m.SelectedSemesterId, Model.Semesters, new { onchange = "this.form.submit();", @class = "form-control" })
                </div>

                <div class="btn btn-primary">
                    Download
                </div>
            </div>


        }


    </div>
</div>
<br />

