@model _5051.Models.SchoolDismissalSettingsModel
@{
    ViewBag.Title = "Update";

    var DayFirst = Model.DayFirst.ToShortDateString(); //string.Format("{0:D1}:{1:D2}", Model.DayFirst.Month, Model.DayFirst.Day, Model.);
    var DayLast = Model.DayLast.ToShortDateString(); //string.Format("{0:D1}:{1:D2}", Model.DayLast.Month, Model.DayLast.Day);
}

<div class="container">
    <h2>School Dismissal Settings</h2>
    <br />
    <div class="row">
        @{
            if (Model == null)
            {
                <p>No Data</p>
            }
            else
            {
                <div class="row">
                    <br />
                    <br />

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.Id)

                        <div class="row">
                            <div class="col-sm-3 text-right">
                                @Html.DisplayNameFor(m => m.StartNormal)
                            </div>
                            <div class="col-sm-4">
                                @Html.EditorFor(m => m.StartNormal, new { htmlAttributes = new { @Value = string.Format("{0:D1}:{1:D2}", Model.StartNormal.Hours, Model.StartNormal.Minutes) } })
                                @Html.ValidationMessageFor(m => m.StartNormal)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-3 text-right">
                                @Html.DisplayNameFor(m => m.StartEarly)
                            </div>
                            <div class="col-sm-4">
                                @Html.EditorFor(m => m.StartEarly, new { htmlAttributes = new { @Value = string.Format("{0:D1}:{1:D2}", Model.StartEarly.Hours, Model.StartEarly.Minutes) } })
                                @Html.ValidationMessageFor(m => m.StartEarly)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-3 text-right">
                                @Html.DisplayNameFor(m => m.StartLate)
                            </div>
                            <div class="col-sm-4">
                                @Html.EditorFor(m => m.StartLate, new { htmlAttributes = new { @Value = string.Format("{0:D1}:{1:D2}", Model.StartLate.Hours, Model.StartLate.Minutes) } })
                                @Html.ValidationMessageFor(m => m.StartLate)
                            </div>
                        </div>

                        <br />
                        <br />

                        <div class="row">
                            <div class="col-sm-3 text-right">
                                @Html.DisplayNameFor(m => m.EndNormal)
                            </div>
                            <div class="col-sm-4">
                                @Html.EditorFor(m => m.EndNormal, new { htmlAttributes = new { @Value = string.Format("{0:D1}:{1:D2}", Model.EndNormal.Hours, Model.EndNormal.Minutes) } })
                                @Html.ValidationMessageFor(m => m.EndNormal)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-3 text-right">
                                @Html.DisplayNameFor(m => m.EndEarly)
                            </div>
                            <div class="col-sm-4">
                                @Html.EditorFor(m => m.EndEarly, new { htmlAttributes = new { @Value = string.Format("{0:D1}:{1:D2}", Model.EndEarly.Hours, Model.EndEarly.Minutes) } })
                                @Html.ValidationMessageFor(m => m.EndEarly)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-3 text-right">
                                @Html.DisplayNameFor(m => m.EndLate)
                            </div>
                            <div class="col-sm-4">
                                @Html.EditorFor(m => m.EndLate, new { htmlAttributes = new { @Value = string.Format("{0:D1}:{1:D2}", Model.EndLate.Hours, Model.EndLate.Minutes) } })
                                @Html.ValidationMessageFor(m => m.EndLate)
                            </div>
                        </div>

                        <br />
                        <br />

                        <div class="row">
                            <div class="col-sm-3 text-right">
                                @Html.DisplayNameFor(m => m.DayFirst)
                            </div>
                            <div class="col-sm-4">
                                @Html.EditorFor(m => m.DayFirst, new { htmlAttributes = new { @Value = DayFirst } })
                                @Html.ValidationMessageFor(m => m.DayFirst)
                            </div>
                        </div>

                        <div class="row">
                            <div class="col-sm-3 text-right">
                                @Html.DisplayNameFor(m => m.DayLast)
                            </div>
                            <div class="col-sm-4">
                                @Html.EditorFor(m => m.DayLast, new { htmlAttributes = new { @Value = DayLast } })
                                @Html.ValidationMessageFor(m => m.DayLast)
                            </div>
                        </div>

                        <br />
                        <br />
                        <div class="row">
                            <div class="col-sm-3 text-right">
                            </div>
                            <div class="col-sm-4">
                                @Html.ActionLink("Back", "Read", new { id = Model.Id }, new { @class = "btn btn-success" })
                                <input type="submit" value="Update" class="btn btn-primary">
                            </div>
                        </div>

                    }


                </div>
            }

        }
    </div>
</div>
